<div class="col-md-12 d-flex align-items-center">
  <h1>Dashboard</h1>
    <div class="ms-auto">
      <%= search_form_for @q, url: dashboard_path do |f| %>
        <%= f.text_field :description_cont, :placeholder => "Search" %>
        <%= f.submit :class => "btn btn-primary btn-block", hidden: true%>
      <% end %>
    </div>
   <!-- Button trigger modal -->
    <div class="ms-4">
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addPersonModal">
        Add a person
      </button>
    </div>
    <div class="ms-4">
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addMemoryModal">
        Add a memory
      </button>
    </div>
</div> 

<div id='map' style='width: 900px; height: 600px;'></div>
<script>
mapboxgl.accessToken = '<%= ENV['MAPBOX_PUBLIC_TOKEN'] %>';
const map = new mapboxgl.Map({
    container: 'map', // container ID
    style: 'mapbox://styles/mapbox/streets-v12', // style URL
    center: [-87.637505, 41.879138], // starting position [lng, lat]
    zoom: 9, // starting zoom
});

<% @memories.each do |memory| %>
  <% if memory.address.present? && memory.address.lat.present? && memory.address.lng.present? %>
    const marker<%= memory.id %> = new mapboxgl.Marker({})
      .setLngLat([<%= memory.address.lat %>, <%= memory.address.lng %>])
      .addTo(map);
  <% end %>
<% end %>
</script>

<%= render "memories/index_table", memories: @memories %>

<div class="modal fade" id="addPersonModal" tabindex="-1" aria-labelledby="addPersonModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="addPersonModalLabel">Add a person</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render "people/form", person: @person %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="addMemoryModal" tabindex="-1" aria-labelledby="addMemoryModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="addMemoryModalLabel">Add a memory</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render "memories/form", memory: @memory %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
