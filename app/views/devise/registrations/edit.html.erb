<% content_for :card_content do %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="d-flex justify-content-between align-items-center">
        <p class="mb-0">Email address</p>
        <%= render partial: 'devise/shared/modal_update', locals: { setting: "email" } %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="text-muted">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="d-flex justify-content-between align-items-center">
        <p class="mb-0">Change password</p>
        <%= render partial: 'devise/shared/modal_update', locals: { setting: "password" } %>
    </div>
    <hr>


  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="form-check form-switch">
      <%= f.check_box :ai_generated_content, class: "form-check-input", role: "switch", id: "aiGeneratedContentSwitch" %>
      <%= f.label :ai_generated_content, "Default setting for AI generated titles", class: "form-check-label", for: "aiGeneratedContentSwitch" %>
    </div>
     <br />
     
    <div class="d-grid gap-2 mb-3">
      <%= f.submit "Update", class: "btn btn-outline-primary" %>
    </div>
  <% end %>

  <hr>
  <div>
    <%= link_to registration_path(resource_name), data: {  "turbo-method": :delete, "turbo-confirm": "Are you sure?" }, class: "text-danger text-decoration-none" do%>
      <i class="fa-solid fa-trash"></i> Delete account
    <% end %>
  </div>
<% end %>

<%= render "devise/shared/card_edit", title: "Edit #{resource_name.to_s.humanize}" %>
