<% content_for :card_content do %>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-floating mb-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      <%= f.label :email, class: "form-label"%>
    </div>

    <div class="form-floating mb-3">
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      <%= f.label :password, class: "form-label"%>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-3">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, class: "form-check-label" %>
      </div>
    <% end %>

    <br />

    <div class="d-grid gap-2 mb-3">
      <%= f.submit "Log in", class: "btn btn-outline-primary"%>
    </div>
    <div>
      <div class="d-flex justify-content-center mb-5">
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name), class:"text-muted text-decoration-none" %>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>

<%= render "devise/shared/card_new", title: "Log into your account" %>
