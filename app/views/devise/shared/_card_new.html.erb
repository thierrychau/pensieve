<section class="h-100">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center my-3">
      <div class="col-xl-10">
        <div class="card rounded text-black">
          <div class="row g-0">
            <div class="col-lg-6">
              <div class="card-body p-md-5 mx-md-4 ">
                <div class="text-center">
                  <p>Get started now!</p>
                  <h1 class="mt-1 mb-3 pb-1", style= "font-family: 'Arial';"><%= title %></h1>
                </div>
                <div>
                  <%= yield :card_content %>
                </div>
                <div class="d-flex justify-content-between">
                  <%= render "devise/shared/links" %>
                </div>
              </div>
            </div>
            <div class="col-lg-6 d-flex align-items-center rounded bg-black">
              <div class="text-white px-3 py-4 p-md-5 mx-md-4 text-center">
                <p class="fs-1" style= "font-family: Permanent Marker;">Your Time Capsule</p>
                <%= image_tag 'pensieve_logo.png', alt: 'Pensieve logo', class:"img-fluid" %>
                <p class="fs-3" style= "font-family: Permanent Marker;">
                  Family Memories<br>
                  Effortlessly Preserved
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
