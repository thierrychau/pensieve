<div class="card p-0 m-2" style="width: 16rem;" id="<%= dom_id memory %>">
  <h5 class="card-header text-center"><%= memory.title.truncate(15, separator: /\s/) if memory.title.present? %></h5>
  <div class="ratio ratio-1x1">
    <% if memory.media.present? %>
      <img src="<%= memory.media.first.url %>" class="card-img-top img-fluid" style="object-fit: cover;" alt="">
    <% else %>
      <div class="bg-light rounded"></div>
    <% end %>
  </div>
  <div class="card-body">
    <p class="card-text"><%= memory.description.truncate(100, separator: /\s/) %></p>
  </div>
   <div class="card-footer d-flex align-items-center justify-content-between">
    <p class="card-text small text-start mb-0"><%= memory.address.input.truncate(15) if memory.address.present? %></p>
    <p class="card-text small text-end"><%= memory.date.strftime("%x") if memory.date.present? %></p>
  </div>
  <%= link_to "", memory, class: "stretched-link hidden" %>
</div>
