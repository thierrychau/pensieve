<div class="col-md-12 d-flex align-items-center">
  <h1>Dashboard</h1>
    <div class="ms-auto">
      <%= search_form_for @q do |f| %>
        <%= f.text_field :description_cont, :placeholder => "Enter a few characters" %>
        <%= f.submit :class => "btn btn-primary btn-block", hidden: true%>
      <% end %>
    </div>
    <%= link_to 'text', "memories/new" %>
</div> 

<table class="table table-hover table-striped table-bordered">
  <thead>
    <tr>
      <th scope="col">Date</th>
      <th scope="col">Description</th>
      <th scope="col">Author</th>
      <th scope="col">See</th>
    </tr>
  </thead>
  <tbody>
    <% @memories.each do |memory| %>
      <tr>
        <td><%= memory.date %></td>
        <td><%= memory.description %></td>
        <td><%= memory.author.email %></td>
        <td><%= link_to "See", memory %></td>
      </tr>
    <% end %>
  </tbody>
</table>

