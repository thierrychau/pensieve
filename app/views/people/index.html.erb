<div class="col-12 d-flex flex-column flex-md-row justify-content-around align-items-center mb-3">
  <h1 class="flex-grow-1">People</h1>
  <%= render partial: 'shared/modal_create', locals: { model: "person" } %>
</div> 

<div class="justify-content-md-between justify-content-center row row-cols-1 row-cols-md-2 g-4">
  <% @people.each do |person| %>
    <%= render 'people/card', person: person %>
  <% end %>
</div>
